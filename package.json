{
    "name": "hrasvaka",
    "description": "A modern, self-hosted, and open-source link shortener.",
    "version": "0.0.0",
    "license": "UNLICENSED",
    "private": true,
    "author": {
        "name": "Vasanth Developer",
        "email": "vasanth@vasanthdeveloper.com",
        "url": "https://vasanth.tech"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/hrasvaka/hrasvaka.git"
    },
    "bugs": {
        "url": "https://github.com/hrasvaka/hrasvaka/issues"
    },
    "scripts": {
        "start": "concurrently -c 'blue,magenta' -n 'server,frontend' 'nodemon' 'cd ./src/frontend && ./node_modules/.bin/vue-cli-service build --watch'",
        "build": "rm -rf ./dist && tsc && cd ./src/frontend && ./node_modules/.bin/vue-cli-service build",
        "reset:db": "dropdb hrasvaka && createdb hrasvaka",
        "postinstall": "./scripts/setup.sh"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "chalk": "^4.0.0",
        "conf": "^6.2.4",
        "crypto-random-string": "^3.2.0",
        "execa": "^4.0.0",
        "express": "^4.17.1",
        "js-yaml": "^3.13.1",
        "jsonwebtoken": "^8.5.1",
        "knex": "^0.20.14",
        "moment": "^2.24.0",
        "mysql2": "^2.1.0",
        "pg": "^8.0.2",
        "validator": "^13.0.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.6",
        "@types/jsonwebtoken": "^8.3.9",
        "@types/node": "^13.11.1",
        "@types/validator": "^13.0.0",
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "concurrently": "^5.1.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.3",
        "nodemon": "^2.0.3",
        "prettier": "^2.0.4",
        "typescript": "^3.8.3"
    }
}
